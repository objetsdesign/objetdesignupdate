<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_demande_devis_tree" model="ir.ui.view">
        <field name="name">demande.devis.list</field>
        <field name="model">demande.devis</field>
        <field name="arch" type="xml">
            <list decoration-muted="state == 'draft'"
                  decoration-success="state == 'confirmed'"
                  decoration-danger="state == 'cancelled'">
                <field name="sequence"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="devis_creation_date"/>
                <field name="state" widget="badge" decoration-muted="state == 'draft'"
                       decoration-success="state == 'confirmed'" decoration-danger="state == 'cancelled'"/>
            </list>
        </field>
    </record>

    <record id="view_demande_devis_form" model="ir.ui.view">
        <field name="name">demande.devis.form</field>
        <field name="model">demande.devis</field>
        <field name="arch" type="xml">
            <form string="Demande de Devis">
                <header>
                    <button name="action_confirmer_devis" type="object" string="Confirmer" class="btn-primary"
                            invisible="state != 'draft'"/>
                    <button name="action_annuler_devis" type="object" string="Annuler" class="btn-secondary"
                            invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,cancelled"/>
                </header>
                <sheet>
                    <group>
                        <field name="sequence" readonly="1"/>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="street"/>
                    </group>
                    <group>
                        <field name="devis_creation_date"/>

                    </group>

                    <notebook>
                        <page string="Produits">
                            <field name="order_line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="image_1920" widget="image" options="{'size': [75, 75]}"/>
                                    <field name="product_uom_qty"/>
                                    <field name="price_unit"/>
                                    <field name="price_subtotal"/>
                                </list>
                            </field>
                        </page>
                        <page string="Informations supplémentaires">
                            <field name="extra_info" widget="html"/>
                        </page>
                    </notebook>

                </sheet>
                <chatter reload_on_post="True"/>
            </form>
        </field>
    </record>

    <record id="view_demande_devis_search" model="ir.ui.view">
        <field name="name">demande.devis.search</field>
        <field name="model">demande.devis</field>
        <field name="arch" type="xml">
            <search>
                <field name="sequence"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="devis_creation_date"/>
                <field name="state"/>

                <!-- Filtres -->
                <filter name="filter_draft" string="Brouillon" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_confirmed" string="Confirmé" domain="[('state', '=', 'confirmed')]"/>
                <filter name="filter_cancelled" string="Annulé" domain="[('state', '=', 'cancelled')]"/>

                <!-- Group By -->
                <group expand="0" string="Regrouper par">
                    <filter name="group_by_partner" string="Client" domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_by_state" string="Statut" domain="[]" context="{'group_by': 'state'}"/>
                    <filter name="group_by_date" string="Date de création" domain="[]"
                            context="{'group_by': 'devis_creation_date'}"/>
                </group>
            </search>
        </field>
    </record>


    <record id="action_devis" model="ir.actions.act_window">
        <field name="name">Demande de Devis</field>
        <field name="res_model">demande.devis</field>
        <field name="view_mode">list,form,search</field>
        <field name="view_ids" eval="[(5,0,0),
                                   (0, 0, {'view_mode': 'list', 'view_id': ref('view_demande_devis_tree')}),
                                   (0, 0, {'view_mode': 'form', 'view_id': ref('view_demande_devis_form')}),
                                   ]"/>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_empty_folder">
                Il n'y a pas de commande de devis sur le site
            </p>
        </field>
    </record>


    <menuitem id="menu_devis"
              name="Devis"
              parent="website_sale.menu_ecommerce"
              sequence="3">

        <menuitem id="menu_orders_orders"
                  name="Demandes de devis"
                  action="action_devis"
                  sequence="1"/>


    </menuitem>


</odoo>