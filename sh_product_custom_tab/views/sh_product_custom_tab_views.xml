<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- FAQ FORM VIEW -->
    <record id="sh_product_tab_form_view" model="ir.ui.view">
        <field name="name">sh.product.tab.form.view</field>
        <field name="model">sh.product.custom.tab</field>
        <field name="arch" type="xml">
            <form string="FAQ">
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Tab Name"/>
                        <h1>
                            <field class="text-break" name="name" options="{'line_breaks': False}" widget="text" placeholder="e.g. Cheese Burger"/>
                        </h1>
                    </div>
                    <group>
                        <field name="sequence" />
                        <field name="code" invisible="1" />
                        <field name="is_global" />
                        <field name="active" />
                        <field name="icon" widget="sh_fa_icon_picker_char" />
                    </group>
                    <notebook invisible="code">
                        <page name="description" string="Description">
                            <field name="description" widget="html" options="{'codeview': true}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TAB TREE VIEW -->
    <record id="sh_product_tab_tree_view" model="ir.ui.view">
        <field name="name">sh.product.faq.list.view"</field>
        <field name="model">sh.product.custom.tab</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="is_global" />
                <field name="active" />
            </list>
        </field>
    </record>

    <!-- TAB SEARCH VIEW -->
    <record id="sh_product_tab_search_view" model="ir.ui.view">
        <field name="name">sh.product.tab.search.view</field>
        <field name="model">sh.product.custom.tab</field>
        <field name="arch" type="xml">
            <search string="Tab">
                <field name="name" />
                <filter string="Inactive" name="inactive" domain="[('active','=',False)]" />
                <filter string="Active" name="active" domain="[('active','=',True)]" />
            </search>
        </field>
    </record>

    <!-- TAB ACTION -->
    <record id="sh_product_tab_action" model="ir.actions.act_window">
        <field name="name">Product Custom Tab</field>
        <field name="res_model">sh.product.custom.tab</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- TAB MENUITEM -->
    <menuitem id="sh_product_tab_menu" name="Product Custom Tab" parent="website.menu_website_global_configuration" action="sh_product_tab_action" groups="website.group_website_designer" />
</odoo>
